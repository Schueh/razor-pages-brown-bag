@page
@model Bookstore.Pages.BooksModel
@{
    ViewData["Title"] = "Books";
}

<div class="text-center">
    <h1 class="display-4">Books</h1>
    
    <div class="container">
        <div class="row">
            @foreach (var book in Model.Books)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <p class="card-text-subtitle">@book.Title</p>
                            <p class="card-text">
                                @book.Description    
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary" asp-page="EditBook" asp-route-id="@book.Id">Edit</a>
                                    <form asp-page-handler="delete" asp-route-id="@book.Id" method="post">
                                        <button class="btn btn-sm btn-outline-secondary">Delete</button>
                                    </form>
                                </div>
                                <small class="text-muted">@book.Author</small>
                                <small class="text-muted">@book.ReleaseDate</small>
                            </div>
                        </div>
                    </div>
                </div>  
            }
        </div>
    </div>
</div>
